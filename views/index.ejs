<div id="carouselFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselFade" data-bs-slide-to="0" class="active" ></button>
        <button type="button" data-bs-target="#carouselFade" data-bs-slide-to="1" ></button>
        <button type="button" data-bs-target="#carouselFade" data-bs-slide-to="2" ></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="images/beachAdventure.png" class="d-block w-100" alt="Beach Adventure">
            <div class="carousel-caption d-none d-md-block">
                <h5>Beach Adventure</h5>
                <p>Explore the beautiful beaches with us.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="images/mountainAdventure.png" class="d-block w-100" alt="Mountain Adventure">
            <div class="carousel-caption d-none d-md-block">
                <h5>Mountain Adventure</h5>
                <p>Discover the thrill of montain adventures.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="images/cityAdventure.png" class="d-block w-100" alt="City Adventure">
            <div class="carousel-caption d-none d-md-block">
                <h5>City Adventure</h5>
                <p>Experience the vibrancy of city life.</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselFade" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" ></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselFade" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<main>
    <section id="" class="container">
        <div class="container text-center mt-5">
            <h1>Welcome to Global Horizons Tours</h1>
        </div>
        <div class = "row mt-5 align-items-center">
            <div class="col-lg-6">
                <h3 class="mt-3">Embark on Unforgettable Journeys with Our Experienced Guides</h3>
                <p>
                    At Global Horizons Tours, we believe that travel is more than just a destinationâ€”it's an adventure that transforms lives. 
                    Whether you're seeking the thrill of exploring ancient ruins, the serenity of breathtaking landscapes, or the excitement 
                    of new cultural experiences, we offer a diverse range of tours designed to create unforgettable memories.
                </p>
                <p>
                    Our team of seasoned guides is passionate about sharing their deep knowledge and love for the world. Each journey is 
                    crafted with care to ensure that you not only visit remarkable places but also connect with the essence of each destination. 
                    From the vibrant streets of bustling cities to the tranquil beauty of remote landscapes, we promise an adventure that will 
                    inspire and invigorate.
                </p>
            </div>
            <div class="col-lg-6">
                <img src="images/GroupPhoto.png" alt="Group Photo" class="img-fluid">
            </div>
        </div>
    </section>

    <section id = "" class="container-fluid mt-5 py-5 testimonials">
        <div class="row">
            <div class="col-sm-10 offset-sm-1">
                <h2 class="text-center mb-4">Testimonials</h2>
                <% 
                    let index = 0;
                    while (index < testimonials.length) { 
                        const endIndex = Math.min(index + 3, testimonials.length); 
                    %>
                        <div class="row d-flex">
                            <% for (let i = index; i < endIndex; i++) { 
                                const testimonial = testimonials[i]; %>
                                <%- include('templates/card', {
                                    title: testimonial.TES_CLIENT_NAME,
                                    subtitle: testimonial.TES_TOUR_NAME,
                                    text: testimonial.TES_COMMENT,
                                    rating: testimonial.TES_RATING
                                }) %>
                            <% } %>
                        </div>
                        <% 
                        index = endIndex; 
                    } 
                %>
            </div>
        </div>
    </section>

    <section id="guides" class="mt-4 container">
        <h2 class="text-center">Meet Our Guides</h2>
        <div class="row mt-4">
            <div class="col-12 col-sm-4 mb-4">
                <div class="card h-100">
                    <img src="images/guide1.png" class="card-img-top" alt="Guide 1" data-bs-toggle="offcanvas" data-bs-target="#offcanvasGuide1" data-bs-placement="top" title="Click for more information">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Guide 1: Sarah</h5>
                        <p class="card-text flex-grow-1">"Adventure is not in the guidebook and beauty is not on the map. Seek and you shall find."</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-4 mb-4">
                <div class="card h-100">
                    <img src="images/guide2.png" class="card-img-top" alt="Guide 2" data-bs-toggle="offcanvas" data-bs-target="#offcanvasGuide2" data-bs-placement="top" title="Click for more information">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Guide 2: John</h5>
                        <p class="card-text flex-grow-1">"The biggest adventure you can take is to live the life of your dreams."</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-4 mb-4">
                <div class="card h-100">
                    <img src="images/guide3.png" class="card-img-top" alt="Guide 3" data-bs-toggle="offcanvas" data-bs-target="#offcanvasGuide3" data-bs-placement="top" title="Click for more information">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Guide 3: Emma</h5>
                        <p class="card-text flex-grow-1">"Adventure may hurt you, but monotony will kill you."</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="container-fluid py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <h2 class="text-center mb-4">Subscribe to Our Newsletter to receive the best promotions</h2>
                <form>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control custom-input" id="email" placeholder="Enter your email" required>
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input custom-checkbox" id="consent" required>
                        <label class="form-check-label" for="consent">I agree to receive newsletters and promotional content.</label>
                    </div>
                    <button type="submit" class="btn w-100 custom-btn">Subscribe</button>
                </form>
            </div>
        </div>
    </section>
</main>


    
    
    

